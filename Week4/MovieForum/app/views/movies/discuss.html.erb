<center >
<h1>Discussion about <%= @movie[:title] %>:</h1>
</center>

<div class="row">
  <div class="col-md-6 moviediscussion">
    <img id="<%=  @movie[:imdbid] %>" src="<%=  @movie[:poster] %>">
  </div>
  <div class="col-md-6 flex-col">
    <div class="comments">
      <% if @comments.empty? %>
      <p> No comments posted yet, be the first!</p>
      <% else%>
      <% @comments.each do |comment| %>
      <h5><%= comment.username %>: </h5>
      <div class="comment">
      <p><%= comment.text %></p>
      </div>
      <% end %>
      <% end %>
    </div>
    <div class="newcomment">
      <div class="newcomment1">
    <h5>Write a new comment</h5>
    <form action="/comments" method="POST">
      <div class="form-group">
        <label for="comment_username">Username</label>
        <input type="text" style="min-width: 100%"  name="comment[username]" id="comment_username">
      </div>
      <div class="form-group">
        <label for="comment_text">Text</label>
        <textarea name="comment[text]" style="min-width: 100%" id="comment_text"></textarea>
      </div>
      <input type="hidden" name="comment[movieid]" value="<%=  @movie[:imdbid] %>">
      <button type="submit">Add comment</button>
      <input type="hidden" name="authenticity_token"
         value="<%= form_authenticity_token %>">
    </form>
    </div>
    </div>
</div>
</div>
