<div class="row">

<div class="col-6">
  <center >
  <h1>Discussion about <%= @movie[:title] %>:</h1>
  </center>

    <div class ="content">
    <div class = "movie">
  <img id="<%=  @movie[:imdbid] %>" src="<%=  @movie[:poster] %>">
  </div>
  </div>
</div>

<div class="col-6">

<div class="comments">
  <% @comments.each do |comment| %>
  <%= comment.username %>
  <%= comment.text %>
  <% end %>
</div>



  <div class="newcomment">
  <h5>Write a new comment</h5>
  <form action="/comments" method="POST">
    <div>
      <label for="comment_username">Username</label>
      <input type="text" name="comment[username]" id="comment_username">
    </div>

    <div>
      <label for="comment_text">Text</label>
      <textarea name="comment[text]" id="comment_text"></textarea>
    </div>
    <input type="hidden" name="comment[movieid]" value="<%=  @movie[:imdbid] %>">
    <button type="submit">Add comment</button>
    <input type="hidden" name="authenticity_token"
       value="<%= form_authenticity_token %>">
  </form>

  </div>
</div>









</div>
